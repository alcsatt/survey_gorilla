<h1> <%= @survey.title %> </h1>
  <% if @survey.questions %>
    <% @survey.questions.each do |question|  %>
      <%= erb :'questions/_single_question', locals: {question: question, survey: @survey}  %>
    <% end %>
  <% end %>
  <a href="/surveys/<%= @survey.id %>/questions/new">Add new question</a>

